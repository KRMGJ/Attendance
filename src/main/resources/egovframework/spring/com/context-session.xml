<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="sessionSchemaPopulator" class="org.springframework.jdbc.datasource.init.ResourceDatabasePopulator">
        <property name="continueOnError" value="true"/>
        <property name="ignoreFailedDrops" value="true"/>
        <property name="scripts">
            <list>
                <value>classpath:org/springframework/session/jdbc/schema-oracle.sql</value>
            </list>
        </property>
    </bean>

    <bean id="sessionDataSourceInitializer" class="org.springframework.jdbc.datasource.init.DataSourceInitializer">
        <property name="dataSource" ref="dataSource"/>
        <property name="databasePopulator" ref="sessionSchemaPopulator"/>
        <property name="enabled" value="true"/>
    </bean>
    
	<bean id="securitySchemaPopulator" class="org.springframework.jdbc.datasource.init.ResourceDatabasePopulator">
		<property name="continueOnError" value="true"/>
		<property name="ignoreFailedDrops" value="true"/>
		<property name="scripts">
			<list>
				<value>classpath:sql/schema_all.sql</value>
				<value>classpath:sql/data_all.sql</value>
			</list>
		</property>
	</bean>

	<bean id="securityDataSourceInitializer" class="org.springframework.jdbc.datasource.init.DataSourceInitializer">
		<property name="dataSource" ref="dataSource"/>
		<property name="databasePopulator" ref="securitySchemaPopulator"/>
		<property name="enabled" value="true"/>
	</bean>
    
	<bean class="org.springframework.session.jdbc.config.annotation.web.http.JdbcHttpSessionConfiguration">
    	<property name="maxInactiveIntervalInSeconds" value="3600"/> <!-- 1 hour -->
  	</bean>
  	
	<bean id="cookieSerializer" class="org.springframework.session.web.http.DefaultCookieSerializer">
	    <property name="cookieName" value="JSESSIONID"/>
	    <property name="cookiePath" value="/"/>
	    <property name="sameSite" value="Lax"/>
	    <property name="useBase64Encoding" value="false"/>
	</bean>
	<bean id="httpSessionIdResolver" class="org.springframework.session.web.http.CookieHttpSessionIdResolver">
	    <property name="cookieSerializer" ref="cookieSerializer"/>
	</bean>

</beans>